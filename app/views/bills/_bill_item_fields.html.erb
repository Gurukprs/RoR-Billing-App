<div class="product-row row g-3 align-items-end mb-3 p-3 rounded bg-white shadow-sm">
  <div class="col-md-7">
    <%= f.label :product_id, "Product ID", class: "form-label text-muted small fw-semibold" %>
    <%= f.select :product_id,
          options_from_collection_for_select(@products, :id, :name),
          { prompt: "Product ID" },
          class: "form-select shadow-none" %>
  </div>

  <div class="col-md-3">
    <%= f.label :quantity, "Quantity", class: "form-label text-muted small fw-semibold" %>
    <%= f.number_field :quantity, min: 1, class: "form-control shadow-none", placeholder: "Quantity" %>
  </div>

  <div class="col-md-2 text-md-end">
    <button type="button" class="btn btn-outline-danger w-100 remove-product">Delete</button>
  </div>
</div>
